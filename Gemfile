gem 'turbolinks', '~> 5'
gem 'jbuilder', '~> 2.5'

gem 'pace-rails'
gem 'jquery-rails'
gem 'bootstrap', '~> 4.1.3'
gem 'popper_js', '~> 1.12.9'
